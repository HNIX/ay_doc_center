<%= form_for @document, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :desc, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :desc, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_private, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :is_private, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_writable, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :is_writable, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  documents_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
