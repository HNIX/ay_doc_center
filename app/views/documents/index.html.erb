<h1>Listing documents</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Desc</th>
      <th>Is private</th>
      <th>Is writable</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.user %></td>
        <td><%= document.name %></td>
        <td><%= document.desc %></td>
        <td><%= document.is_private %></td>
        <td><%= document.is_writable %></td>
        <td><%= document.category %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

