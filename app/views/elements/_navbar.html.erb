<!-- BEGIN HEADER -->
<header class="page-header">
    <nav class="navbar mega-menu" role="navigation">
        <div class="container-fluid">
            <div class="clearfix navbar-fixed-top">
                <!-- Brand and toggle get grouped for better mobile display -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="toggle-icon">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </span>
                </button>
                <!-- End Toggle Button -->
                <!-- BEGIN LOGO -->
                <%= link_to image_tag("AY_Reverse.png"), defined?(root_path) ? root_path : "#", class: "page-logo" %>
                <!-- END LOGO -->
                <!-- BEGIN SEARCH -->
                <form class="search" action="extra_search.html" method="GET">
                    <input type="name" class="form-control" name="query" placeholder="Search...">
                    <a href="javascript:;" class="btn submit md-skip">
                        <i class="fa fa-search"></i>
                    </a>
                </form>
                <!-- END SEARCH -->
                <!-- BEGIN TOPBAR ACTIONS -->
                <div class="topbar-actions">
                    <!-- BEGIN USER PROFILE -->
                    <div class="btn-group-img btn-group">
                      <% if defined?(Devise) %>
                        <% if user_signed_in? %>
                          <button type="button" class="btn btn-sm md-skip dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                              <span>Account</span>
                          </button>
                          <ul class="dropdown-menu-v2" role="menu">
                              <li>
                                  <%= link_to "My Profile", edit_user_registration_path %>
                              </li>
                              <li>
                                  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
                              </li>
                          </ul>
                        <% else %>
                          <ul class="dropdown-menu-v2" role="menu">
                            <li><%= link_to "Login", new_user_session_path %></li>
                            <li><%= link_to "Sign Up", new_user_registration_path %></li>
                          </ul>
                        <% end %>
                      <% end %>
                    </div>
                    <!-- END USER PROFILE -->
                </div>
                <!-- END TOPBAR ACTIONS -->
            </div>
            <!-- BEGIN HEADER MENU -->
            <div class="nav-collapse collapse navbar-collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown dropdown-fw <%= 'active open selected' if params[:controller] == 'landings' %>">
                        <a href="javascript:;" class="text-uppercase">
                            Dashboard </a>
                        <ul class="dropdown-menu dropdown-menu-fw">
                            <li class="active">
                                <%= link_to "Home", root_path %>
                            </li>
                            <li>
                                <a href="dashboard_2.html">
                                    </i>Press</a>
                            </li>
                            <li>
                                <a href="dashboard_3.html">
                                    </i>Company News</a>
                            </li>
                        </ul>
                    </li>
                    <% @categories.each do |cat| %>
                        <% if cat.is_root? %>
                            <li class="dropdown dropdown-fw  <%= active_nav(cat) %>">
                              <%= link_to cat.name, "#", class: "text-uppercase" %>
                              <% if cat.has_children? %>
                                <ul class="dropdown-menu dropdown-menu-fw">
                                    <% cat.children.each do |sub| %>
                                      <li class="dropdown <%= 'more-dropdown-sub' if sub.has_children? %>">
                                        <%= link_to sub.name, category_path(sub) %>
                                          <% if sub.has_children? %>
                                            <ul class="dropdown-menu">
                                              <% sub.children.each do |subsub| %>
                                                <li>
                                                  <%= link_to subsub.name, category_path(subsub) %>
                                                </li>
                                              <% end %>
                                            </ul>
                                        <% end %>
                                      </li>
                                    <% end %>
                                </ul>
                              <% end %>
                            </li>
                        <% end %>
                    <% end %>
                    <li class="dropdown dropdown-fw  ">
                        <a href="javascript:;" class="text-uppercase">
                            Directory</a>
                        <ul class="dropdown-menu dropdown-menu-fw">
                            <li>
                                <a href="#">Nashville</a>
                            </li>
                            <li>
                                <a href="#">Knoxville</a>
                            </li>
                            <li>
                                <a href="#">Memphis</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown dropdown-fw  <%= 'active open selected' if params[:controller] == 'documents' && params[:action] == 'new' || params[:controller] == 'categories' && params[:action] == 'new'%>">
                        <a href="javascript:;" class="text-uppercase">
                            Admin</a>
                        <ul class="dropdown-menu dropdown-menu-fw">
                            <li>
                                <%= link_to "New Document", new_document_path %>
                            </li>
                            <li>
                                <%= link_to "New Category", new_category_path %>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- END HEADER MENU -->
        </div>
        <!--/container-->
    </nav>
</header>
            <!-- END HEADER -->