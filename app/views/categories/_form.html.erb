<%= form_for @category, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <%= f.hidden_field :parent_id %>
  <div class="form-group">
    <%= f.label :parent, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :parent_id, @category_tree, prompt: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :desc, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :desc, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to "Cancel", current_user, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
