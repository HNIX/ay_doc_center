<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
      <div class="mt-card-item">
          <div class="mt-card-avatar mt-overlay-1">
              <%= image_tag(doc.attachment.thumb.url) if doc.attachment? %>
              <div class="mt-overlay">
                  <ul class="mt-info">
                      <li>
                          <a class="btn blue" data-toggle="modal" href="#responsive<%= doc.id %>">
                              View
                          </a>
                      </li>
                      <li>
                          <a class="btn green" data-target="#stack<%= doc.id %>" data-toggle="modal"> Info </a>
                      </li>
                  </ul>
              </div>
          </div>
          <div class="mt-card-content">
              <h3 class="mt-card-name"><%= doc.name %></h3>
          </div>
      </div>
  </div>
  <div id="responsive<%= doc.id %>" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title"><%= doc.name %></h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div id="<%= no_spaces(doc.name) %><%= doc.id %>" class="col-md-6">
                
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <%= link_to "Download PowerPoint", doc.ppt_url, class:"btn btn-outline dark" if doc.ppt? %>
        <%= link_to "Download Word", doc.word_url, class:"btn btn-outline dark" if doc.word? %>
        <%= link_to "Download PDF", doc.attachment_url, class:"btn btn-outline dark" if doc.attachment? %>
        <button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
        <a class="btn green" data-target="#stack<%= doc.id %>" data-dismiss="modal" data-toggle="modal"> Info </a>
    </div>
  </div>
  <div id="stack<%= doc.id %>" class="modal fade" tabindex="-1" data-focus-on="input:first">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title"><%= doc.name %></h4>
      </div>
      <div class="modal-body">
        <div class="col-md-6">
          <h4>Description</h4>
          <p> <%= doc.desc %> </p>
        </div>
        <div class="col-md-6">
          <h4>Turnaround</h4>
          <p> The turnaround time for this project is:  </p>
          <h4>Tags</h4>
          <p><%= doc.tag_list %></p>
        </div>
        <div class="col-md-12">
          <p> If you would like to request a project like this one please contact your marketing coordinator or submit a request below and someone will be in conact with you shortly. </p>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" data-tabindex="1" placeholder="Project Name"> 
        </div>
        <div class="form-group">
            <input class="form-control" type="text" data-tabindex="2" placeholder="Deadline"> 
        </div>
      </div>
      <div class="modal-footer">
          <button class="btn blue" data-toggle="modal" href="#stack2">Request</button>
          <button type="button" data-dismiss="modal" class="btn btn-outline dark">Close</button>
      </div>
  </div>
<script>PDFObject.embed("<%= doc.attachment.url %>", "#<%= no_spaces(doc.name) %><%= doc.id %>");</script>