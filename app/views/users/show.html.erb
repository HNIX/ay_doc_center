
<div class="row">
  <div class="col-md-6">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bubble font-green"></i>
                    <span class="caption-subject font-green sbold uppercase">Categories</span>
                </div>
                 <div class="actions">
                    <%= link_to new_category_path, class: "btn btn-default btn-sm"  do %>
                        <i class="fa fa-plus"></i> New
                    <% end %>
                </div>
            </div>
            <div class="portlet-body ">
                <div class="dd" id="nestable_list_1">
                    <ol class="dd-list">      
                        <%= nested_categories @categories.arrange %>
                    </ol>
                </div>
            </div>
        </div>
    </div>
	<div class="col-md-6 pull-right">
		<div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bubble font-green"></i>
                    <span class="caption-subject font-green sbold uppercase">Documents</span>
                </div>
            	<div class="actions">
                    <%= link_to new_document_path, class: "btn btn-default btn-sm"  do %>
                        <i class="fa fa-plus"></i> New
                    <% end %>
                </div>
            </div>
			<table class="table table-striped">
			  <thead>
			    <tr>
			      <th>Name</th>
			      <th>Category</th>
			      <th>Last Updated</th>
			    </tr>
			  </thead>
			  <tbody>
			    <% @documents.each do |document| %>
			      <tr>
			        <td><%= link_to document.name, document_path(document) %></td>
			        <td><%= document.category.name if document.category %></td>
			        <td><%=l document.updated_at, format: :short %></td>
			        <td>
			        	<%= link_to document_path(document), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-sm btn-danger pull-right' do %>
			            	<i class="fa fa-trash"></i>
			          	<% end %>
			          	<%= link_to edit_document_path(document), :class => 'btn btn-sm blue pull-right' do %>
			          		<i class="fa fa-pencil"></i>
			          	<% end %>
			        </td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
</div>